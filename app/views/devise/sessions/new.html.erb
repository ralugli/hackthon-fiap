<div class="form-signin">

  <%= image_tag "logo_login.png" %>

  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>

      <div class="form-group">
        <%= f.label :email, "E-mail" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Senha" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Lembrar-me" %>
        </div>
        <% end %>
        <div class="form-group">
          <%= f.submit  t('.sign_in', :default => "Acessar"), class: "btn btn-primary" %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to t(".sign_up", :default => "Criar uma conta"), new_registration_path(resource_name), :class => "btn btn-default pull-right" %><br />
          <% end -%>
        </div>
    <% end %>
  </div>
</div>

<% render "devise/shared/links" %>
